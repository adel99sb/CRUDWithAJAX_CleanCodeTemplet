@using Core.Entities
@model IEnumerable<Employer>
<table class="table table-bordered" id="employerTable">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Company
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var employer in Model)
            {
        <tr>
            <td>
                @employer.FirstName
            </td>
            <td>
                @employer.LastName
            </td>
            <td>
                @employer.Email
            </td>
            <td>
                @employer.PhoneNumber
            </td>
            <td>
                @employer.Company
            </td>
            <td text-right">
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@employer.Id','Edit Employer')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-page="Index" asp-route-id="@employer.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> Delete</button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#employerTable").DataTable();
    });
</script>